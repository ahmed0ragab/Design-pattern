{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "orchestra/testbench-dusk",
    "description": "Laravel Dusk Testing Helper for Packages Development",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Keoghan Litchfield",
            "email": "keoghan@klever.co.uk",
            "homepage": "https://klever.co.uk",
            "role": "Developer"
        },
        {
            "name": "Mior Muhammad Zaki",
            "email": "crynobone@gmail.com",
            "homepage": "https://github.com/crynobone",
            "role": "Organization Maintainer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Orchestra\\Testbench\\Dusk\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Orchestra\\Testbench\\Dusk\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "bin": [
        "testbench-dusk"
    ],
    "require": {
        "php": "^8.2",
        "composer-runtime-api": "^2.2",
        "laravel/dusk": "^8.1",
        "laravel/serializable-closure": "^1.3|^2.0.4",
        "orchestra/dusk-updater": "^3.0.2",
        "orchestra/sidekick": "~1.1.5|^1.2.0",
        "orchestra/testbench": "^9.15.0",
        "orchestra/testbench-core": "^9.16.0",
        "php-webdriver/webdriver": "^1.15.1",
        "symfony/polyfill-php83": "^1.31"
    },
    "require-dev": {
        "laravel/pint": "^1.22",
        "laravel/tinker": "^2.9",
        "phpstan/phpstan": "^2.1.14",
        "phpunit/phpunit": "^10.5.35|^11.3.6|^12.0.1"
    },
    "config": {
        "preferred-install": {
            "orchestra/testbench-core": "source",
            "*": "auto"
        },
        "sort-packages": true
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare",
            "@dusk:install-chromedriver"
        ],
        "clear": "@php testbench-dusk package:purge-skeleton --ansi",
        "prepare": "@php testbench-dusk package:discover --ansi",
        "build": "@php testbench-dusk workbench:build --ansi",
        "dusk:install-chromedriver": "@php vendor/bin/dusk-updater detect --auto-update --ansi",
        "serve": [
            "@build",
            "@php testbench-dusk serve --ansi"
        ],
        "lint": [
            "@php vendor/bin/pint --ansi",
            "@php vendor/bin/phpstan analyse --verbose"
        ],
        "test": [
            "@php testbench-dusk package:drop-sqlite-db",
            "@php testbench-dusk package:create-sqlite-db",
            "@php vendor/bin/phpunit --no-coverage --no-configuration --dont-report-useless-tests --bootstrap vendor/autoload.php --color tests"
        ],
        "sync": [
            "@clear",
            "@php bin/sync",
            "@lint"
        ],
        "sync-dev": [
            "@clear",
            "@php bin/sync --dev",
            "@lint"
        ],
        "ci": [
            "@prepare",
            "@dusk:install-chromedriver",
            "@lint",
            "@test"
        ]
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
